@page "{PageIndex}"
@model UI.Pages.SuggestModel

<h2><span class="glyphicon glyphicon-list-alt"></span>意见建议</h2>
<form method="get">
    @{
        foreach (var item in Model.SuggestS)
        {
            <a href="/SuggestHTML/Single/@item.id"> @item.Title <br /></a>
            @item.Content <br />
            @item.PublishSuggestDateTime <br />

        }
    }
</form>
    <a class="btn btn-default" href="/SuggestHTML/Suggest/@Model.PageIndexminusOne" role="button">上一页</a>
    <a class="btn btn-default" href="/SuggestHTML/Suggest/@Model.PageIndexAndOne" role="button">下一页</a>

